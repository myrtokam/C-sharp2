using System;

class Program {
    static void Main() {
        Console.Write("Εισάγετε έναν αριθμό: ");
        int number = int.Parse(Console.ReadLine());
        string reversedDigits = "";

        while (number > 0) {
            reversedDigits += (number % 10).ToString();
            number /= 10;
        }

        Console.WriteLine("Ψηφία αντίστροφα: " + reversedDigits);
    }
}

