using System;

class Program {
    static void Main() {
        int number = 43279;
        int sum = 0;

        while (number > 0) {
            int digit = number % 10;  // Παίρνει το τελευταίο ψηφίο του αριθμού
            sum += digit;            // Προσθέτει το ψηφίο στο άθροισμα
            number /= 10;            // Αφαιρεί το τελευταίο ψηφίο
        }

        Console.WriteLine("Το άθροισμα των ψηφίων του αριθμού είναι: " + sum);
    }
}
