
using System;


//Να γραφεί πρόγραμμα το οποίο θα δέχεται μια θερμοκρασία σε βαθμούς Κελσίου και θα υπολογίζει και θα εμφανίζει την αντίστοιχη σε βαθμούς Φαρενάιτ. (Δίνεται: °C × 9/5 + 32 = °F).



class Program
{
    static void Main()
    {
        Console.WriteLine("ΔΩΣΕ ΤΗΝ ΤΙΜΗ ΤΩΝ ΒΑΘΜΩΝ ΚΕΛΣΙΟΥ");
        double numberCelciou = Convert.ToDouble(Console.ReadLine());
        double metatropi = numberCelciou * 9 / 5 + 32;


        Console.WriteLine("Η ΤΙΜΗ ΣΕ farenait ΕΙΝΑΙ: " + metatropi);
        Console.ReadLine();
    }
}





